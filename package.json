{
  "name": "tournament-public-backend",
  "version": "1.0.50",
  "type": "module",
  "module": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate",
    "build": "bun run prisma:generate && bun build src/index.ts --target=bun --outdir=dist --minify --sourcemap --external @prisma/client --external prisma",
    "start": "bun run dist/index.js",
    "prod": "bun run build && bun run start",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/client": "^6.14.0",
    "elysia": "latest",
    "prismabox": "^1.1.25",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "bun-types": "latest",
    "prisma": "^6.14.0"
  }
}
